pipeline{
    agent any
  parameters{
      string(name:'PROJ_PATH', defaultValue:'/Users/xiaozhengcheng/.jenkins/workspace/kok_Android/' ,description:"项目工程路径", trim:true)
      string(name:'UNITY_PATH', defaultValue:'/Applications/Unity/Hub/Editor/2018.4.26f1/Unity.app/Contents/MacOS/Unity' ,description:"Unity安装路径", trim:true)
      string(name:'LOG_PATH',defaultValue:'/Users/xiaozhengcheng/.jenkins/workspace/kok_Android/log.txt',description:'打包log 的路径')
      string(name:'UWA_PATH',defaultValue:'/Users/xiaozhengcheng/.jenkins/workspace/kok_Android/',description:'UWA上传文件夹路径')
      string(name:'COM_RES',defaultValue:'CommandCheckerHelper.CommandChecker',description:'压缩资源函数，根据策略集中处理iOS 和 安卓的资源，每个项目都不一样，这里默认都是KOK的打包函数')
      string(name:'BUILD_AB',defaultValue:'JenkinsBuilder.BuildAndroidAB',description:'打AB 包的函数，每个项目都不一样，这里默认都是KOK的打包函数')
      choice(name:'RUN_FUN',choices:['JenkinsBuilder.BuildAndroid_UWA','JenkinsBuilder.BuildAndroid_Full'], description:"这里是可执行函数,对应Unity里的函数")
  }

  options{
      disableConcurrentBuilds() // 禁止多条流水线
      timestamps()
  }
stages{
  stage("压缩资源"){
    steps{
      sh label:'压缩资源',script:"${params.UNITY_PATH} -batchmode -nographics -projectPath ${params.PROJ_PATH} -logFile ${params.LOG_PATH} -executeMethod ${params.COM_RES} -quit"
    }
  }

stage("使用UWA检测资源"){
steps{
      sh label:'压缩资源',script:"${params.UNITY_PATH} -batchmode -nographics -projectPath ${params.PROJ_PATH} -logFile ${params.LOG_PATH} -executeMethod   UwaProjScan.MainScan.DoTest -quit"
    }
}

//stage("上传UWA检查结果"){
//steps{
 //     sh label:'上传UWA检查结果',script:"mono ${params.UWA_PATH}UwaDataUploader.exe  ${params.PROJ_PATH}UwaScan -quit"
  //  }
//}

stage("打AB包"){
    steps{
            sh label:'打AB包',script:"${params.UNITY_PATH} -batchmode -nographics -projectPath ${params.PROJ_PATH} -logFile ${params.LOG_PATH} -executeMethod ${params.BUILD_AB} -quit"
    }
  }

stage("打包"){
      steps{
        sh label:'打包',script:"${params.UNITY_PATH} -batchmode -nographics -projectPath ${params.PROJ_PATH} -logFile ${params.LOG_PATH} -executeMethod ${params.RUN_FUN} -quit ${params.EXPORT_PATH} -quit"
      }
    }
  }
}