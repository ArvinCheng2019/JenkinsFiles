pipeline{
    agent any
    parameters{
      string(name:'PROJ_PATH', defaultValue:'/Users/xiaozhengcheng/.jenkins/workspace/kok_iOS/' ,description:"项目工程路径", trim:true)
      string(name:'UNITY_PATH', defaultValue:'/Applications/Unity/Hub/Editor/2018.4.26f1/Unity.app/Contents/MacOS/Unity' ,description:"Unity安装路径", trim:true)
      string(name:'LOG_PATH',defaultValue:'/Users/xiaozhengcheng/.jenkins/workspace/kok_iOS/log.txt',description:'打包log 的路径')
      string(name:'EXPORT',defaultValue:'/Users/xiaozhengcheng/.jenkins/workspace/Android_Build/IPA/',description:'打包输出的路径')
      string(name:'BUILD_AB',defaultValue:'JenkinsBuilder.BuildAndroidAB',description:'打AB 包的函数，每个项目都不一样，这里默认都是KOK的打包函数')
      choice(name:'RUN_FUN',choices:['JenkinsBuilder.BuildAndroid_UWA','JenkinsBuilder.BuildAndroid_Full'], description:"这里是可执行函数,对应Unity里的函数")
      string(name:'GIT_PATH', defaultValue:'git@git.bluefir.cn:kok/archer.git' ,description:"Git地址", trim:true)
      string(name:'GIT_BRANCH', defaultValue:'origin/master2018' ,description:"Git_分支", trim:true)
    }

    options{
      disableConcurrentBuilds() // 禁止多条流水线
      timestamps()
    }

  stages{
    stage("更新Git"){
        steps{
        sh label:"git 更新",script:"cd ${PROJ_PATH} git clone ${GIT_PATH}"
      }
    }
